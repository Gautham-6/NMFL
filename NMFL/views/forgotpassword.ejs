<!DOCTYPE html>
<html>
<head>
<title>NMFL - Forgot Password</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=1000">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="/css/index.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" integrity="sha256-qM7QTJSlvtPSxVRjVWNM2OfTAz/3k5ovHOKmKXuYMO4=" crossorigin="anonymous"></script>
<!-- include css content -->
<style>

.back {
	background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
	background-size: 400% 400%;
	animation: gradient 15s ease infinite;
}

@keyframes gradient {
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}


input[type=text], input[type=password] {
  width: 100%;
  padding: 15px;
  margin: 5px 0 22px 0;
  display: inline-block;
  border: none;
  background: #f1f1f1;
}

input[type=text]:focus, input[type=password]:focus {
  background-color: #ddd;
  outline: none;
}


/* Set a style for all buttons */
button {
  background-color: #08ab88;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  cursor: pointer;
  width: 100%;
  opacity: 0.9;
}

button:hover {
  opacity:1;
}

/* Extra styles for the cancel button */
.cancelbtn {
  padding: 14px 20px;
  background-color: #f44336;
}

/* Float cancel and signup buttons and add an equal width */
.cancelbtn, .signupbtn {
  float: left;
  width: 50%;
}

/* Add padding to container elements */


/* Clear floats */
.clearfix::after {
  content: "";
  clear: both;
  display: table;
}


.slate{
  width: 110%;
	position: relative;
  padding-right: 170px;
  height: 900px;
}

.frames{
  position: relative;
  top:90px;
  width: 450px;
  height: <%=locals.initialframe%>;
  margin: auto;
  margin-top: 10px;
  border-radius: 5%;
}

.admin-input-signup{
  background: #e3e3e3;
}

.formframe{
margin-left: 25px;
margin-right: 25px;
}


/* Full-width input fields */
  </style>

</head>
<body class="w3-content" style="max-width:1550px">

<!-- header content insertion -->
<%- include('header.ejs')%>

<!-- !PAGE CONTENT! -->
<div class="w3-main back " style="margin-left:250px">


  <!-- Push down content on small screens -->
  <div class="w3-hide-large" style="margin-top:83px"></div>
<form action="/forgotpassword" method="post">
		<div class=" slate">
      <div style="margin-top:-10px;"  class="backcard">
       <div class="w3-card w3-white frames">

         <div class="w3-row w3-center">
           <img style="margin-top:-25px;" width="80px" height="80px" src="https://s13639.pcdn.co/wp-content/uploads/2015/12/Android-App-Icon.png" alt="">
         </div>
				 <%if(locals.error){%>
				 <div class="w3-panel w3-pale-red w3-border">
  			 	<h3>Error!</h3>
  				<p><%=locals.error%></p>
				 </div>
				 <%}%>
				 <%if(locals.success){%>
				 <div class="w3-panel w3-pale-green w3-border">
					<h3>Success!</h3>
					<p><%=locals.success%></p>
				 </div>
				 <%}%>
<%if(locals.processfinished=="completed"){%>
<div style="margin-top:25px;" class="w3-row w3-container formframe">
	<!-- <input type="submit" class="w3-button w3-input w3-pink" name="" value="Submit"> -->
	<a class="w3-button w3-input w3-pink" href="/partnerlogin">Login</a>
</div>
<%}else{%>
	<div class="w3-row w3-center">
		<h3><b>Forgot password</b></h3>
		<p class="w3-container" style="text-align:left">Please enter your mail id so that we can verify and reset your password</p>
	</div>
	<hr>
	<div class="w3-row w3-container formframe">
		<label for="">Email ID:</label>
		<%if(locals.emailvalue){%>
			<input type="email" class="w3-input admin-input-signup " placeholder="Enter your email address" required name="forgotemail" readonly value="<%=locals.emailvalue%>">
		<%}else{%>
			<input type="email" class="w3-input admin-input-signup " placeholder="Enter your email address" required name="forgotemail" value="">
		<%}%>
	</div>
	<hr>
	<!-- if email verified -->
	<%if(locals.emailverified!="off"){%>
	 <% if(locals.passwordmode=='off'){ %>
		 <div class="w3-row w3-container formframe">
		 <label for="">Enter OTP:</label>
		 <input type="number" class="w3-input admin-input-signup " placeholder="Enter the OTP" required name="otp" value="">
		 </div>
	 <%}else{%>
		 <div class="w3-row w3-container formframe">
			 <label for="">Enter Password:</label>
			 <input type="password" class="w3-input admin-input-signup " placeholder="Enter password	" required name="password" value="">
		 </div>

		 <div class="w3-row w3-container formframe">
			 <label for="">Confirm Password:</label>
			 <input type="password" class="w3-input admin-input-signup " placeholder="Enter password	" required name="cnfpassword" value="">
		 </div>
	 <%}%>
	<%}%>
	<div style="margin-top:25px;" class="w3-row w3-container formframe">
		<input type="submit" class="w3-button w3-input w3-pink" name="" value="Submit">
	</div>
<%}%>
       </div>
       </div>
      </div>
		</form>
    </div>

</div>


<!-- Newsletter Modal -->
<div id="newsletter" class="w3-modal">
    <div class="w3-modal-content w3-animate-zoom" style="padding:32px">
      <div class="w3-container w3-white w3-center">
        <i onclick="document.getElementById('newsletter').style.display='none'" class="fa fa-remove w3-right w3-button w3-transparent w3-xxlarge"></i>
        <h2 class="w3-wide">NEWSLETTER</h2>
        <p>Join our mailing list to receive updates on new arrivals and special offers.</p>
        <p><input class="w3-input w3-border" type="text" placeholder="Enter e-mail"></p>
        <button type="button" class="w3-button w3-padding-large w3-red w3-margin-bottom" onclick="document.getElementById('newsletter').style.display='none'">Subscribe</button>
      </div>
    </div>
  </div>

<script>
// sidenavbar


function validate(){
  var sort_filter = document.getElementById("sort_filter");
  var speciality_filter = document.getElementById('speciality_filter');
  var filter_button = document.getElementById('filterbutton');

  if(sort_filter.value || speciality_filter.value){
    filter_button.innerHTML = "Filter &nbsp; <i class='fa fa-filter'></i> &nbsp; <i style='font-size:15px' class='fa w3-text-green'>&#xf058;</i>"
  }else{
    filter_button.innerHTML = "Filter &nbsp; <i class='fa fa-filter'></i>"
  }

}

function removeFilter(){
    var filter_button = document.getElementById('filterbutton');
    filter_button.innerHTML = "Filter &nbsp; <i class='fa fa-filter'></i>"
}

function openNav() {
  document.getElementById("mySidenav").style.width = "250px";
}

function closeNav() {
  document.getElementById("mySidenav").style.width = "0";
}

// Open and close sidebar
function w3_open() {
  document.getElementById("mySidebar").style.display = "block";
  document.getElementById("myOverlay").style.display = "block";
}

function w3_close() {
  document.getElementById("mySidebar").style.display = "none";
  document.getElementById("myOverlay").style.display = "none";
}


</script>

<div class="w3-display-container bgimg2">
  <div class="w3-display-middle w3-text-white w3-center">


  </div>
</div>


</body>
</html>
