    <body>
      <div class="container p-30">
          <div class="row">
              <div class="col-md-12 main-datatable">
                  <div class="card_body">
                      <div class="row d-flex">
                          <div class="col-sm-4 createSegment">
                           <h2>Manage Hospitals</h2>
                          </div>
                          <div class="col-sm-8 add_flex">
                              <div class="form-group searchInput">
                                  <label for="email">Search:</label>
                                  <input type="search" class="form-control" id="filterbox" placeholder=" ">
                              </div>
                          </div>
                      </div>
                      <div class="overflow-x">
                          <table style="width:100%;" id="filtertable" class="table cust-datatable dataTable no-footer">
                              <thead>
                                  <tr>
                                      <th style="min-width:100px;">User Name</th>
                                      <th style="min-width:150px;">Email</th>
                                      <th style="min-width:150px;">Status</th>
                                      <th style="min-width:150px;">Action</th>
                                  </tr>
                              </thead>
                              <tbody>
                                <% users.forEach(user => { %>
                                  <tr class="<%= user.approved ? 'approved' : (user.approved === false ? 'rejected' : '') %>">
                                      <td><h4><%= user.HospitalName %></h4></td>
                                      <td><h4><%= user.emailid %></h4></td>
                                      <td><span class="mode mode_done"><b><%= user.approved === true ? 'Approved' : (user.approved === false ? 'Rejected' : 'Pending') %></b></span></td>
                                      <td>
                                          <% if (!user.approved) { %>
                                            <form method="post" action="/admin/status">
                                              <input type="hidden" name="userId" value="<%= user._id %>">
                                              <input class="approve-btn btn btn-success" type="submit" name="action" value="Approve"/>
                                              <input class=" reject-btn btn btn-primary" type="submit" name="action" value="Reject"/>
                                              <input class="reject-btn btn btn-danger" type="submit" name="action" value="Delete"><i class="bi bi-trash"></i></input>
                                            </form>
                                          <% } else{%>
                                            <form method="post" action="/admin/status">
                                              <input type="hidden" name="userId" value="<%= user._id %>">
                                              <input class="reject-btn btn btn-primary" type="submit" name="action" value="Reject"/>
                                            </form>
                                          <%}%>
                                      </td>
                                  </tr>
                                  <% }) %>
                              </tbody>
                          </table>
                      </div>
                  </div>
              </div>
          </div>
      </div>



    <script>
      $(document).ready(function() {
        var dataTable = $('#filtertable').DataTable({
            "pageLength":8,
            'aoColumnDefs':[{
                'bSortable':false,
                'aTargets':['nosort'],
            }],
            "aoColumns":[
                null,
                null,
                null,
                null
            ],
            "order":false,
            "bLengthChange":false,
            "dom":'<"top">ct<"top"p><"clear">'
        });
        $("#filterbox").keyup(function(){
            dataTable.search(this.value).draw();
        });
    } );

    </script>

